<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.CarProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:contentDescription="@string/account_box_text"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_directions_car" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp">

            <TextView
                android:id="@+id/model_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_directions_car"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:hint="@string/mode_hint"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />


            <TextView
                android:id="@+id/plate_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/model_tv"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_insert_drive_file"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:hint="@string/plate_number_hint"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        </RelativeLayout>

        <Button
            android:id="@+id/edit_car_profile_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/edit_car_profile_btn_text"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>